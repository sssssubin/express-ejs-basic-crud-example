<div class="container">
  <h1>할 일 목록</h1>

  <!-- 할 일 추가 폼 -->
  <section class="task-form">
    <h3>할 일 추가하기</h3>
    <form action="/addTask" method="post">
      <input
        type="text"
        name="newTask"
        placeholder="할일 목록을 추가해주세요"
        required
      />
      <button type="submit">추가하기</button>
    </form>
  </section>

  <!-- 할 일 목록 -->
  <section class="task-list">
    <h3>현재 할 일 목록</h3>
    <ul>
      <% tasks.forEach(task => { %>
      <li>
        <span class="task-item"><%= task %></span>
        <form action="/deleteTask" method="post" class="delete-form">
          <input type="hidden" name="task" value="<%= task %>" />
          <button type="submit">지우기</button>
        </form>
      </li>
      <% }); %>
    </ul>
  </section>

  <hr />

  <!-- 사용자 목록 조회 -->
  <section class="user-list">
    <h2>사용자 목록 조회</h2>
    <ul>
      <% users2.forEach((person, idx) => { %>
      <li class="user-item">
        <div class="user-info">
          <p><strong>이름:</strong> <%= person.name %></p>
          <p><strong>나이:</strong> <%= person.age %></p>
          <p><strong>역할:</strong> <%= person.role %></p>
        </div>
        <div class="user-status">
          <span><%= person.age > 18 ? 'Pass' : 'Reject' %></span>
        </div>
      </li>
      <% }) %>
    </ul>
  </section>
</div>
